
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Kayıt Ol</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">


    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Template/login-page-in-html-with-css-code/style.css">

</head>
<body>
    <!-- partial:index.partial.html -->
    <div class="box-form">
        <div class="left">
            <div class="overlay">
                <h1>Hello World.</h1>
                <p>
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                    Curabitur et est sed felis aliquet sollicitudin
                </p>
              
            </div>
        </div>


        <div class="right">
            <h5>Kayıt Ol</h5>
            <p>Don't have an account? <a href="#">Creat Your Account</a> it takes less than a minute</p>
            <div class="inputs">
                <form method="post">
                    <input type="text" class="text" name="Username" placeholder="Kullanıcı Adınız" required="" autofocus>
                    <input type="text" class="text" name="Email" placeholder="Email" required="" autofocus>
                    <input type="password" class="password" name="password" placeholder="Şifreniz" required="" autofocus> 
                    <br /><br />
                    <button class="btn" type="submit">Kayıt ol</button>
                </form>
            </div>

            <br><br>

            <div class="remember-me--forget-password">
                <!-- Angular -->
                <label>
                    <input type="checkbox" name="item" checked />
                    <span class="text-checkbox">Beni Hatırla</span>
                </label>
                <p>Şifreni mi unuttun?</p>
            </div>    
       </div>
    <!-- partial -->

</body>
</html>




