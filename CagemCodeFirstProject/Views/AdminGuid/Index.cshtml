@model List<CagemCodeFirstProject.DAL.Entities.Guide>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2>Rehber İşlemleri</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Rehber Adı</th>
        <th>Unvan</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.GuideId</td>
            <td>@item.GuideName</td>
            <td>@item.GuideTitle</td>
            <td><a href="~/AdminGuid/AddGuide/@item.GuideId class="btn btn-outline-danger">Sil</a></td>
            <td><a href="~/AdminGuide/UpdateGuide/@item.GuideId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="#" class="btn btn-outline-info">Yeni Rehber Girişi</a>